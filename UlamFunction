public class UlamFunction {
    
    public static void main(String[] args) {
        int n = 837799; // Example starting number
        System.out.println("Starting number: " + n);
        
        while (n != 1) {
            if (n % 2 == 0) {
                n = n / 2; // If n is even, divide it by 2    
            } else {
                n = 3 * n + 1; // If n is odd, multiply it by 3 and add 1
            }
            System.out.println(n); // Print the current value of n
        }
        
        System.out.println("Terminated with 1.");
    }
}
